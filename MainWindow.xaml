<Window x:Class="Sniper_Shooter_Game_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sniper_Shooter_Game_WPF"
        mc:Ignorable="d"
        Title="Snipe the Dummies" Height="450" Width="800" ResizeMode="CanMinimize">
    <Canvas x:Name="MyCanvas" Focusable="True" Background="LightBlue" 
            MouseLeftButtonDown="MyCanvas_MouseLeftButtonDown" MouseMove="MyCanvas_MouseMove">

        <Image x:Name="scopeImage" Height="60" Width="60" Panel.ZIndex="999" Canvas.Left="380" Canvas.Top="303" />

        <Label x:Name="scoreText" Content="Score: 0" FontSize="14" FontWeight="ExtraBold" Canvas.Left="660" Canvas.Top="65" />
        <Label x:Name="missText" Content="Missed: 0" FontSize="14" FontWeight="ExtraBold" Canvas.Left="660" Canvas.Top="20" />

    </Canvas>
</Window>
